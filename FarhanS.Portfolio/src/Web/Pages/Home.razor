@page "/"
@using Microsoft.AspNetCore.Components.Web
@using FarhanS.Portfolio.Web.Models
@inject IJSRuntime JSRuntime
@inject FarhanS.Portfolio.Web.Services.ILinkedInService LinkedInService

<PageTitle>@(Profile?.FullName ?? "Farhan S.") - Software Developer Portfolio</PageTitle>

<!-- Dark mode toggle button -->
<div class="theme-toggle-wrapper">
    <button id="theme-toggle" class="theme-toggle" @onclick="ToggleTheme" title="Toggle Dark/Light Mode">
        <i class="bi bi-moon-stars"></i>
    </button>
</div>

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">@(Profile?.FullName ?? "Farhan S.")</h1>
                <h2 class="text-primary">@(Profile?.Title ?? "Software Developer")</h2>
                <p class="lead mt-3">@(Profile?.Summary ?? "Crafting efficient, elegant solutions to complex problems.")</p>
                <div class="mt-4">
                    <a href="@Profile?.ProfileUrl" target="_blank" class="btn btn-primary me-2">
                        <i class="bi bi-linkedin me-1"></i> Connect on LinkedIn
                    </a>
                    <a href="#contact" class="btn btn-outline-dark">Get In Touch</a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <!-- Profile image from LinkedIn or fallback -->
                <img src="@(string.IsNullOrEmpty(Profile?.ProfileImageUrl) ? "images/profile-placeholder.jpg" : Profile.ProfileImageUrl)" 
                     alt="@(Profile?.FullName ?? "Farhan S.")" class="img-fluid rounded-circle profile-image shadow">
            </div>
        </div>
    </div>
</div>

<section id="about" class="py-5">
    <div class="container">
        <h2 class="section-title">About Me</h2>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <p class="lead">
                    @(Profile?.Summary ?? "I'm a passionate software developer with expertise in modern web technologies.")
                </p>
                <p>
                    With a background in software development, I bring a unique perspective that emphasizes both technical 
                    performance and exceptional user experience. My goal is to build applications that are not only 
                    functionally robust but also intuitive and accessible to users.
                </p>
            </div>
        </div>
    </div>
</section>

<section id="experience" class="py-5 bg-light">
    <div class="container">
        <h2 class="section-title">Professional Experience</h2>
        <div class="row">
            @if (Profile?.Experiences != null && Profile.Experiences.Any())
            {
                @foreach (var experience in Profile.Experiences)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card experience-card h-100">
                            <div class="card-body">
                                <h3 class="card-title h5">@experience.Title</h3>
                                <h4 class="company-name h6">@experience.Company</h4>
                                <p class="text-muted">@experience.Duration @(!string.IsNullOrEmpty(experience.Location) ? $"• {experience.Location}" : "")</p>
                                <p class="card-text">@experience.Description</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>Experience data is being loaded...</p>
                </div>
            }
        </div>
    </div>
</section>

<section id="skills" class="py-5">
    <div class="container">
        <h2 class="section-title">Technical Skills</h2>
        <div class="row">
            @if (Profile?.Skills != null && Profile.Skills.Any())
            {
                <div class="col-md-3 mb-4">
                    <div class="card skill-card h-100">
                        <div class="card-body">
                            <h3 class="card-title h5"><i class="bi bi-code-slash me-2"></i>Languages</h3>
                            <ul class="list-unstyled">
                                @foreach (var skill in Profile.Skills.Where(s => s.Category == "Languages"))
                                {
                                    <li><span class="badge bg-primary me-1">@skill.Name</span></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card skill-card h-100">
                        <div class="card-body">
                            <h3 class="card-title h5"><i class="bi bi-box me-2"></i>Frameworks</h3>
                            <ul class="list-unstyled">
                                @foreach (var skill in Profile.Skills.Where(s => s.Category == "Frameworks"))
                                {
                                    <li><span class="badge bg-success me-1">@skill.Name</span></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card skill-card h-100">
                        <div class="card-body">
                            <h3 class="card-title h5"><i class="bi bi-database me-2"></i>Databases</h3>
                            <ul class="list-unstyled">
                                @foreach (var skill in Profile.Skills.Where(s => s.Category == "Databases"))
                                {
                                    <li><span class="badge bg-warning text-dark me-1">@skill.Name</span></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card skill-card h-100">
                        <div class="card-body">
                            <h3 class="card-title h5"><i class="bi bi-tools me-2"></i>Tools & DevOps</h3>
                            <ul class="list-unstyled">
                                @foreach (var skill in Profile.Skills.Where(s => 
                                    s.Category != "Languages" && 
                                    s.Category != "Frameworks" && 
                                    s.Category != "Databases"))
                                {
                                    <li><span class="badge bg-info me-1">@skill.Name</span></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-md-4 mb-4">
                    <div class="card skill-card h-100">
                        <div class="card-body">
                            <h3 class="card-title h5"><i class="bi bi-code-slash me-2"></i>Languages</h3>
                            <ul class="list-unstyled">
                                <li><span class="badge bg-primary me-1">C#</span></li>
                                <li><span class="badge bg-primary me-1">JavaScript</span></li>
                                <li><span class="badge bg-primary me-1">TypeScript</span></li>
                                <li><span class="badge bg-primary me-1">HTML/CSS</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Default skills sections omitted for brevity -->
            }
        </div>
    </div>
</section>

<section id="education" class="py-5 bg-light">
    <div class="container">
        <h2 class="section-title">Education</h2>
        <div class="row">
            @if (Profile?.Education != null && Profile.Education.Any())
            {
                @foreach (var education in Profile.Education)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card education-card h-100">
                            <div class="card-body">
                                <h3 class="card-title h5">@education.Institution</h3>
                                <p><strong>@education.Degree</strong> @(!string.IsNullOrEmpty(education.Field) ? $"in {education.Field}" : "")</p>
                                <p class="text-muted">@education.Duration</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>Education data is being loaded...</p>
                </div>
            }
        </div>
    </div>
</section>

<section id="contact" class="py-5 bg-light">
    <div class="container">
        <h2 class="section-title">Get In Touch</h2>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="contact-info text-center mb-4">
                    <p class="lead">Interested in working together? Feel free to reach out!</p>
                    <div class="d-flex justify-content-center social-links">
                        <a href="https://www.linkedin.com/in/your-linkedin-profile" class="social-link" target="_blank" title="LinkedIn">
                            <i class="bi bi-linkedin fs-3"></i>
                        </a>
                        <a href="mailto:your.email@example.com" class="social-link" title="Email">
                            <i class="bi bi-envelope fs-3"></i>
                        </a>
                        <a href="https://github.com/your-username" class="social-link" target="_blank" title="GitHub">
                            <i class="bi bi-github fs-3"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<footer class="footer py-4 bg-dark text-white">
    <div class="container text-center">
        <p>&copy; @DateTime.Now.Year Farhan S. All rights reserved.</p>
        <p class="small">Made with <i class="bi bi-heart-fill text-danger"></i> using Blazor</p>
    </div>
</footer>

@code {
    private LinkedInProfile? Profile { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Profile = await LinkedInService.GetProfileDataAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Initialize theme based on saved preference
            await JSRuntime.InvokeVoidAsync("initializeTheme");
        }
    }

    private async Task ToggleTheme()
    {
        await JSRuntime.InvokeVoidAsync("toggleTheme");
    }
}