@using FarhanS.Portfolio.Web.Models

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card skill-card h-100" style="--animation-order: 1">
            <div class="card-body">
                <h3 class="card-title h5"><i class="bi bi-code-slash me-2"></i>Languages</h3>
                <ul class="list-unstyled">
                    @foreach (var skill in Skills.Where(s => s.Category == "Languages"))
                    {
                        <li><span class="badge bg-primary me-1">@skill.Name</span></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card skill-card h-100" style="--animation-order: 2">
            <div class="card-body">
                <h3 class="card-title h5"><i class="bi bi-box me-2"></i>Frameworks</h3>
                <ul class="list-unstyled">
                    @foreach (var skill in Skills.Where(s => s.Category == "Frameworks"))
                    {
                        <li><span class="badge bg-success me-1">@skill.Name</span></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card skill-card h-100" style="--animation-order: 3">
            <div class="card-body">
                <h3 class="card-title h5"><i class="bi bi-database me-2"></i>Databases</h3>
                <ul class="list-unstyled">
                    @foreach (var skill in Skills.Where(s => s.Category == "Databases"))
                    {
                        <li><span class="badge bg-warning text-dark me-1">@skill.Name</span></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card skill-card h-100" style="--animation-order: 4">
            <div class="card-body">
                <h3 class="card-title h5"><i class="bi bi-tools me-2"></i>Tools & DevOps</h3>
                <ul class="list-unstyled">
                    @foreach (var skill in Skills.Where(s => 
                        s.Category != "Languages" && 
                        s.Category != "Frameworks" && 
                        s.Category != "Databases"))
                    {
                        <li><span class="badge bg-info me-1">@skill.Name</span></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public IEnumerable<Skill> Skills { get; set; } = new List<Skill>();
}